{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "../../",
    "paths": {
      "ceata": ["src/index.js"],
      "ceata/*": ["src/*"]
    }
  },
  "include": [
    "*.ts"
  ]
}